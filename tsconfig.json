{
  "compilerOptions": {
    "outDir": "lib/",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2020",
    "jsx": "react",
    "lib": ["es2016", "dom"],
    "types": ["node"],
    "baseUrl": "./ts-src/",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false
  },
  "include": ["./ts-src/*"]
}
